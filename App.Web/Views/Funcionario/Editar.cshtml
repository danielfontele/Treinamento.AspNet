@model Funcionario

<section class="painel app-views-funcionario-editar">
            
    <!-- Barra de botoes -->
    <nav>
        @Html.ActionLink("Salvar", "Salvar")
        @Html.ActionLink("Excluir", "Excluir")
        @Html.ActionLink("Cancelar e voltar", "Index")
    </nav>

    <!-- Titulo -->
    <div class="titulo-principal">Funcionários</div>

    <!-- Codigo -->
    <div class="linha">
        <div class="coluna40 texto-alinhado-direita">
            @Html.LabelFor(x => x.Codigo)
        </div>
        <div class="coluna">
            @Html.TextBoxFor(x => x.Codigo)
        </div>
    </div>

    <!-- Nome -->
    <div class="linha">
        <div class="coluna40 texto-alinhado-direita">
            @Html.LabelFor(x => x.Nome)
        </div>
        <div class="coluna">
            @Html.TextBoxFor(x => x.Nome, new { @class="tamanho300", @autocomplete="off"})
        </div>
    </div>


</section>


